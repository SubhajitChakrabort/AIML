        <form action="/auth/register" method="post" onsubmit="return validateForm()">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 w-100">
                        <label for="schoolNameCode" class="form-label">School Name & Code</label>
                        <select class="form-select" id="schoolNameCode" name="schoolNameCode">
                            <option value="">Select school name & code</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-3 w-50">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
            </div>
            <div class="mb-3 w-50">
                <label for="Class" class="form-label">Class</label>
                <select class="form-select" id="Class" name="Class" required>
                    <option value="">Select Class</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="mb-3 w-50">
                <label for="mediumCode" class="form-label">Medium</label>
                <select class="form-select" id="mediumCode" name="mediumCode" required>
                    <option value="">Select Medium</option>
                    <option value="Bengali">Bengali</option>
                    <option value="Hindi">Hindi</option>
                    <option value="English">English</option>
                    <option value="Nepali">Nepali</option>
                    <option value="Urdu">Urdu</option>
                    <option value="Madrash">Madrash</option>
                </select>
            </div>
            <div class="mb-3 w-50">
                <label for="gurdianname" class="form-label">Guardian Name</label>
                <input type="text" class="form-control" id="gurdianname" name="gurdianname"
                    placeholder="Enter Guardian Name" required>
            </div>
            <div class="mb-3 w-50">
                <label for="contactno" class="form-label">Mobile No:</label>
                <input type="text" class="form-control" id="contactno" name="contactno" placeholder="Enter Contact No:"
                    oninput="validateMobileNumber(this)" required>
            </div>
            <div class="mb-3 w-50">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" onchange="updateDate()" readonly>
            </div>
            <div class="text-center">
                <button type="submit" id="submit-button" class="btn btn-primary w-50">Register Information</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const schoolNameCodeSelect = document.getElementById("schoolNameCode");

            fetch('/schools')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    data.forEach(suggestion => {
                        const option = document.createElement("option");
                        const value = `${suggestion.name} (${suggestion.school_code})`; // Concatenate name and code
                        option.textContent = value; // Displaying both name and code
                        option.value = value; // Set option value to concatenated string
                        schoolNameCodeSelect.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error("Error fetching schools:", error);
                });

        });

        function validateForm() {
            var name = document.getElementById("name").value.trim();
            var Class = document.getElementById("Class").value.trim();
            var gurdianname = document.getElementById("gurdianname").value.trim();
            var contactno = document.getElementById("contactno").value.trim();
            var mediumCode = document.getElementById("mediumCode").value.trim();

            if (name === '' || Class === '' || gurdianname === '' || contactno === '' || mediumCode === '') {
                alert("All fields are required!");
                return false;
            }
            return true;
        }
        function validateMobileNumber(input) {
            input.value = input.value.replace(/\D/g, ''); // Remove any non-numeric characters
            if (input.value.length > 10) {
                input.value = input.value.slice(0, 10); // Limit to 10 digits
            }
        }

        function updateDate() {
            var today = new Date();
            var dd = String(today.getDate()).padStart(2, '0');
            var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
            var yyyy = today.getFullYear();

            today = yyyy + '-' + mm + '-' + dd;
            document.getElementById('date').value = today;
        }

        updateDate(); // Update date on page load


